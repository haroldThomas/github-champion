# Personal Access Token with read access to the organization and repositories
GITHUB_TOKEN=ghp_your_personal_access_token_here

# Default organization (can be overridden via CLI or settings file)
GITHUB_ORG=your-org-name

# Optional comma-separated list of repositories. If omitted, all org repos are used.
GITHUB_REPOS=repo-one,repo-two

# Optional date range preset (last_7_days, last_30_days, last_90_days, this_month, this_year)
GITHUB_DATE_PRESET=last_30_days